{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2019"],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "lib/*": ["lib/*"],
      "test/*": ["test/*"]
    },
    "rootDirs": ["lib", "test"],
    "moduleResolution": "node"
  },
  "include": ["lib/**/*.ts", "test/**/*"]
}
